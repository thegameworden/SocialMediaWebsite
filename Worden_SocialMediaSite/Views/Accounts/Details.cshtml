@model Worden_SocialMediaSite.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<!-- Account Information Section -->
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>

<div>
    <!-- Personal Posts -->

    <div>
        <h3>Personal Posts</h3>
        @foreach (var post in Model.PersonalPosts)
        {
            <p><b>@post.TimePosted : </b> @post.Caption <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary btn-sm">View Post</a></p>
            
        }
    </div>

    <!-- Liked Posts -->
    <div>
        <h3>Liked Posts</h3>
        @foreach (var post in Model.LikedPosts)
        {
            
            <p>@post.Caption</p>
            
        }
    </div>

    <!-- Followers -->
    <div>
        <h3>Followers</h3>
        @foreach (var follower in Model.Followers)
        {
            <p>@follower.UserName</p>
        }
    </div>

    <!-- Following -->
    <div>
        <h3>Following</h3>
        @foreach (var following in Model.Following)
        {
            <p>@following.UserName</p>
        }
    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

